<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/yellow"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/layout_tool_bar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/btn_download_picture"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_margin="@dimen/common_margin_30dp"
            android:background="@drawable/shape_publish_btn"
            android:gravity="center"
            android:text="@string/download_picture"
            android:textColor="#2e2e2e"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_download_video"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_below="@+id/btn_download_picture"
            android:layout_margin="@dimen/common_margin_30dp"
            android:background="@drawable/shape_publish_btn"
            android:gravity="center"
            android:text="@string/download_video"
            android:textColor="#2e2e2e"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_with_shadow_height"
        android:layout_below="@id/tool_bar"
        android:background="@drawable/img_home_toolbar_shadow" />


</LinearLayout>